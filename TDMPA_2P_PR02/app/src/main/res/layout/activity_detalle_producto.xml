<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fondoProducto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B0A6A7"
    tools:context=".DetalleProductoActivity">

    <view
        android:id="@+id/viewDetalleProducto"
        class="androidx.appcompat.widget.ActionMenuView"
        android:layout_width="375dp"
        android:layout_height="333dp"
        android:background="#51403D"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.238" />

    <view
        android:id="@+id/viewPrecioTotal"
        class="androidx.appcompat.widget.ActionMenuView"
        android:layout_width="375dp"
        android:layout_height="268dp"
        android:background="#9A8D96"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.961" />

    <view
        android:id="@+id/viewNombre"
        class="androidx.appcompat.widget.ActionMenuView"
        android:layout_width="375dp"
        android:layout_height="67dp"
        android:background="#30333A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024" />

    <TextView
        android:id="@+id/txtNombreProducto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mooli"
        android:text="Nombre: "
        android:textColor="@color/white"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="@+id/viewNombre"
        app:layout_constraintEnd_toEndOf="@+id/viewNombre"
        app:layout_constraintStart_toStartOf="@+id/viewNombre"
        app:layout_constraintTop_toTopOf="@+id/viewNombre"
        app:layout_constraintVertical_bias="0.478" />

    <ImageView
        android:id="@+id/imgDetalleProducto"
        android:layout_width="128dp"
        android:layout_height="128dp"
        app:layout_constraintBottom_toBottomOf="@+id/viewDetalleProducto"
        app:layout_constraintEnd_toEndOf="@+id/viewDetalleProducto"
        app:layout_constraintHorizontal_bias="0.048"
        app:layout_constraintStart_toStartOf="@+id/viewDetalleProducto"
        app:layout_constraintTop_toTopOf="@+id/viewDetalleProducto"
        app:layout_constraintVertical_bias="0.058"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txtDescripcionProducto"
        android:layout_width="209dp"
        android:layout_height="125dp"
        android:fontFamily="@font/mooli"
        android:text="Descripcion: ..."
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/viewDetalleProducto"
        app:layout_constraintEnd_toEndOf="@+id/viewDetalleProducto"
        app:layout_constraintHorizontal_bias="0.915"
        app:layout_constraintStart_toStartOf="@+id/viewDetalleProducto"
        app:layout_constraintTop_toTopOf="@+id/viewDetalleProducto"
        app:layout_constraintVertical_bias="0.056" />

    <TextView
        android:id="@+id/txtPrecioProducto"
        android:layout_width="350dp"
        android:layout_height="32dp"
        android:fontFamily="@font/mooli"
        android:text="Precio: ..."
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/viewDetalleProducto"
        app:layout_constraintEnd_toEndOf="@+id/viewDetalleProducto"
        app:layout_constraintHorizontal_bias="0.413"
        app:layout_constraintStart_toStartOf="@+id/viewDetalleProducto"
        app:layout_constraintTop_toTopOf="@+id/viewDetalleProducto" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="350dp"
        android:layout_height="32dp"
        android:fontFamily="@font/mooli"
        android:text="Cantidad a desear:"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/viewDetalleProducto"
        app:layout_constraintEnd_toEndOf="@+id/viewDetalleProducto"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="@+id/viewDetalleProducto"
        app:layout_constraintTop_toTopOf="@+id/viewDetalleProducto"
        app:layout_constraintVertical_bias="0.697" />

    <TextView
        android:id="@+id/txtPrecioTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mooli"
        android:text="Precio Total: ..."
        android:textColor="@color/black"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="@+id/viewPrecioTotal"
        app:layout_constraintEnd_toEndOf="@+id/viewPrecioTotal"
        app:layout_constraintStart_toStartOf="@+id/viewPrecioTotal"
        app:layout_constraintTop_toTopOf="@+id/viewPrecioTotal" />

    <Button
        android:id="@+id/btnMenos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/viewDetalleProducto"
        app:layout_constraintEnd_toEndOf="@+id/viewDetalleProducto"
        app:layout_constraintHorizontal_bias="0.116"
        app:layout_constraintStart_toStartOf="@+id/viewDetalleProducto"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintVertical_bias="0.488" />

    <Button
        android:id="@+id/btnMas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/viewDetalleProducto"
        app:layout_constraintEnd_toEndOf="@+id/viewDetalleProducto"
        app:layout_constraintHorizontal_bias="0.88"
        app:layout_constraintStart_toStartOf="@+id/viewDetalleProducto"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintVertical_bias="0.488" />

    <TextView
        android:id="@+id/txtCantidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/viewDetalleProducto"
        app:layout_constraintEnd_toEndOf="@+id/viewDetalleProducto"
        app:layout_constraintStart_toStartOf="@+id/viewDetalleProducto"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />
</androidx.constraintlayout.widget.ConstraintLayout>